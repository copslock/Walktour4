<resources>

    <style name="activity_toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--每个视图界面的主框架的样式-->
    <style name="fragment_main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_main_bg_color</item>
    </style>
    <!-- 控制栏按钮背景色 -->
    <style name="control_bar_button_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/base_list_toolbar_bg</item>
        <item name="android:textColor">@color/app_main_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <!--标题栏分割线-->
    <style name="title_divider">
        <item name="android:background">@color/title_bg_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>
    <!--列表分割线-->
    <style name="list_divider">
        <item name="android:background">@drawable/list_divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <!--编辑行的样式-->
    <style name="layout_edge">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--编辑行的左边文本显示样式-->
    <style name="layout_edge_left_text_view">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/app_main_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--编辑行的右边文本编辑框样式-->
    <style name="layout_edge_right_edit_text">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/app_edt_drop</item>
        <item name="android:textColor">#454545</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--编辑行的右边勾选框样式-->
    <style name="layout_edge_right_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <!-- 页签栏的页签字体大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 菜单栏的弹出菜单样式-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:colorBackground">@color/title_bg</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>
    <!-- 菜单栏的弹出菜单样式-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>
</resources>
