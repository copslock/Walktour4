<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/small_window_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_main_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_info"
        style="@style/item_layout_white_circle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/param_name_1_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="SS-RSRP"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_1_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="9013"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/param_name_2_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="PCI"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_2_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="9879"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/param_name_3_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="SS-SINR"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_3_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="460/0"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/param_name_4_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="Band"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_4_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="38"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/param_name_5_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="PointA ARFCN"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_5_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="90dp"
                    android:paddingBottom="2dip"
                    android:text="2013"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/param_name_6_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="SSB ARFCN"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_6_nr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dp"
                    android:paddingBottom="2dip"
                    android:text="38"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0.5"
                android:layout_marginRight="8dp"
                android:background="@drawable/list_divider" />

            <TextView
                android:id="@+id/network_type_nr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:paddingBottom="2dp"
                android:layout_gravity="center_horizontal|center"
                android:background="@drawable/endc_nr"
                android:textColor="@color/white"
                android:textSize="@dimen/default_txt_size_normal"
                tools:text="NR" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0.5"
                android:background="@drawable/list_divider" />

            <TextView
                android:id="@+id/network_type_endc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/endc"
                android:layout_gravity="center_horizontal|center"
                android:textColor="@color/white"
                android:textSize="@dimen/default_txt_size_normal"
                tools:text="ENDC" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0.5"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/list_divider" />

            <TextView
                android:id="@+id/network_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:background="@drawable/endc_lte"
                android:paddingBottom="5dp"
                android:layout_gravity="center_horizontal|center"
                android:textColor="@color/white"
                android:textSize="@dimen/default_txt_size_normal"
                tools:text="LTE" />

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0.5"
                android:layout_marginLeft="8dp"
                android:background="@drawable/list_divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/param_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Cell ID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="9013"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/param_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="LAC"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="90dp"
                    android:paddingBottom="2dip"
                    android:text="9879"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="MCC/MNC"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="460/0"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/param_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="BCCH"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="38"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.1">

                <TextView
                    android:id="@+id/param_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="BSIC"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="2013"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/param_name_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="BCCH"
                    android:textColor="@color/black"
                    android:textSize="@dimen/app_second_content_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/param_value_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="80dp"
                    android:paddingBottom="2dip"
                    android:text="38"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_second_content_txt_size" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/layout_white_circle_paramter"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/custom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>

</LinearLayout>