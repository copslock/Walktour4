<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview_detail"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/param_view_bg_color"
     >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="0,1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                style="@style/textview_info_title"
                android:background="@drawable/background_tablerow_stroke"
                android:layout_span="2"
                android:text="@string/ap_attribute" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_bssid" />

            <TextView
                android:id="@+id/txt_bssid"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_ssid" />

            <TextView
                android:id="@+id/txt_ssid"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_rssi" />

            <TextView
                android:id="@+id/txt_rssi"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_signalSchwankung" />

            <TextView
                android:id="@+id/txt_signalSchwankung"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_encryption" />

            <TextView
                android:id="@+id/txt_encrypt"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:visibility="gone" >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_snr" />

            <TextView
                android:id="@+id/txt_snr"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_supportedProtocol" />

            <TextView
                android:id="@+id/txt_supportprotocol"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:visibility="gone" >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_noise" />

            <TextView
                android:id="@+id/txt_noise"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_beaconperiod" />

            <TextView
                android:id="@+id/txt_beacon"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_supportedrates" />

            <TextView
                android:id="@+id/txt_supportrate"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
             >

            <TextView
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_network_mode" />

            <TextView
                android:id="@+id/txt_network_mode"
                style="@style/textview_info_value"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_textview"
                style="@style/textview_info_label_3"
                android:text="@string/detail_item_active_time" />

            <TextView
                android:id="@+id/txt_active_time"
                style="@style/textview_info_value" />
        </TableRow>
    </TableLayout>

</ScrollView>
