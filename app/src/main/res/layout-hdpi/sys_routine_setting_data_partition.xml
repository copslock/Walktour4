<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setting_datacatup_type_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_list_item_bg" >

        <TextView
            style="@style/setting_sort_left_text_2"
            android:text="@string/sys_setting_datacutup_type" />

        <TextView
            android:id="@+id/setting_datacatup_type_text"
            style="@style/setting_sort_right_text_2" />
    </RelativeLayout>

    <View style="@style/sys_routine_setting_divider" />

    <RelativeLayout
        android:id="@+id/setting_datacatup_size_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_list_item_bg" >

        <TextView
            android:id="@+id/setting_datacatup_size_left_text"
            style="@style/setting_sort_left_text_2"
            android:text="@string/sys_setting_datacutup_size" />

        <TextView
            android:id="@+id/setting_datacatup_size_text"
            style="@style/setting_sort_right_text_2" />
    </RelativeLayout>

</LinearLayout>