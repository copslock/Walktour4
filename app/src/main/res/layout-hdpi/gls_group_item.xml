<?xml version="1.0" encoding="utf-8"?>  
<!-- 注意： 将复选框设置为不可点击，不可在触摸时点击，不可获得焦点 -->  
<LinearLayout   
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content" 
    android:orientation="horizontal" >  
    
    <LinearLayout   
	    android:layout_width="match_parent"  
	    android:layout_height="wrap_content"
		android:layout_marginTop="7dip"
		android:layout_marginBottom="5dip"
    	android:orientation="horizontal" > 
    
		    <RelativeLayout   
				    android:layout_width="match_parent"  
				    android:layout_height="40dip"
				    android:background="@drawable/login_button_shape" 
				    android:gravity="center_vertical"
			    	> 
    
		    <TextView
		        android:layout_width="wrap_content"  
		        android:layout_height="wrap_content"  
		        android:layout_marginLeft="10dip"  
		        android:text="Area"
		        android:textColor="@android:color/white"
		    />
		    
		    <LinearLayout 
		        android:layout_alignParentRight="true"
		        android:layout_width="wrap_content"  
	    		android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:paddingRight="5dip"
		        >
		        <TextView
		            android:id="@+id/mainItem"   
		            android:layout_width="wrap_content"  
	    			android:layout_height="wrap_content"
		            android:text="Spain"
		           	android:textColor="@color/info_param_color"
		           	android:paddingLeft="3dip"
					android:paddingRight="5dip"		
		           	android:textSize="@dimen/app_content_txt_size"
		            />
		        <TextView 
		            android:visibility="gone"
		            android:layout_width="wrap_content"  
	    			android:layout_height="wrap_content"
	    			android:text="Europe"
	    			android:textColor="@color/info_param_color"
					android:textSize="@dimen/app_content_txt_size"
		            />
		        <ImageView
		        android:id="@+id/isExpandedImg"     
		        android:layout_width="wrap_content"  
	    		android:layout_height="wrap_content"
		        android:background="@drawable/expander_ic_minimized_black"    
		            />
		        
		    </LinearLayout>
    
   		   </RelativeLayout>
    
    </LinearLayout>  
</LinearLayout>  