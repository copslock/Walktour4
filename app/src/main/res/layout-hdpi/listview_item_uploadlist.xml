<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout   
    android:id="@+id/LinearLayout01"   
    android:layout_width="fill_parent"   
    android:layout_height="wrap_content" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    	<!-- 图标 -->
    	<ImageView android:id="@+id/ItemIcon"  
    	android:layout_width="wrap_content"   
    	android:layout_height="wrap_content"   	
    	android:layout_centerVertical="true"
    	android:layout_marginLeft="6dip"
    	android:layout_marginTop="3dip"
    	android:layout_marginBottom="3dip"
    	/>
    	
    			<!-- 文件名 -->
		<TextView android:id="@+id/ItemText"
			android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_toRightOf="@id/ItemIcon"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="24dip"
    		android:singleLine="true"
    		android:ellipsize="marquee"
		/>
    	
    	<!--进度条  -->
		<ProgressBar android:id="@+id/ItemProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ItemText"
    	android:layout_alignLeft="@id/ItemText"
        android:layout_marginRight="24dip"
        /> 
    
    	<!-- 进度百分比 -->
    	<TextView android:id="@+id/ItemTitle"
    	android:layout_width="wrap_content"
			android:textSize="@dimen/app_content_txt_size"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/ItemText"
    	android:layout_alignLeft="@id/ItemText"
    	android:layout_marginLeft="6dip"
    	android:paddingBottom="6dip"
    	android:textColor="@android:color/white"
        android:text="@string/fleet_percent"
    	/>
          
</RelativeLayout> 