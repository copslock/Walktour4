<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@color/transparent"
     >

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_main_shape"
        android:padding="2dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/Import_rv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/base_list_item_bg"
        android:gravity="center_vertical"
         >

        <TextView
            android:id="@+id/Import_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/task_import"
            android:textColor="@color/app_main_text_color"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/app_content_txt_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
		<View style="@style/task_listdivider"    />    
    <RelativeLayout
        android:id="@+id/Export_rv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/base_list_item_bg" >

        <TextView
            android:id="@+id/Export_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/task_export"
            android:textColor="@color/app_main_text_color"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/app_content_txt_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
	<View style="@style/task_listdivider"    />
	<RelativeLayout
        android:id="@+id/History_rv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/base_list_item_bg"
            >

        <TextView
            android:id="@+id/History_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/task_history"
            android:textColor="@color/app_main_text_color"
            android:textSize="@dimen/app_content_txt_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    	<View style="@style/task_listdivider"    />
	<RelativeLayout
        android:id="@+id/Share_rv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/base_list_item_bg"
         >

        <TextView
            android:id="@+id/Share_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/task_share"
            android:textColor="@color/app_main_text_color"
            android:textSize="@dimen/app_content_txt_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>