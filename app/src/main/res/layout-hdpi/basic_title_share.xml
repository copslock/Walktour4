<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/app_title_height"
    android:layout_centerVertical="true"
    android:background="@color/app_title_bg_color"
    android:gravity="center_vertical|left">

    <ImageButton
        android:id="@+id/pointer"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/task_test_main_bg"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:src="@drawable/navi_back" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/pointer"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/act_info"
        android:textColor="@color/white"
        android:textSize="@dimen/app_first_title_txt_size" />

    <LinearLayout
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:textSize="@dimen/app_defult_btn_txt_size"
            android:id="@+id/push"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/share_type_receive" />

        <TextView
            android:id="@+id/shuxian"
            android:textSize="@dimen/app_content_txt_size"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="|"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/share"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/obj_send"
            android:gravity="center_vertical|center_horizontal"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/app_defult_btn_txt_size" />
    </LinearLayout>

</RelativeLayout>