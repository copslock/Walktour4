<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/task_layout_edge"
        android:background="@color/app_main_bg_color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/tasK_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/task_callMOS_connect_device" />

        <CheckBox
            android:id="@+id/bluetooth_mos_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:button="@drawable/switch_button_bg"
            android:checked="false" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_weight="50" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:background="@color/app_main_bg_color"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/main_deviceName" />

                <EditText
                    android:id="@+id/edit_device_name"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_mac_address" />

                <EditText
                    android:id="@+id/edit_mac_address"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_signal_level" />

                <EditText
                    android:id="@+id/edit_signal_level"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_ring_result" />

                <EditText
                    android:id="@+id/edit_ring_result"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--/--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_power" />

                <EditText
                    android:id="@+id/edit_device_power"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_playback_volume" />

                <EditText
                    android:id="@+id/edit_device_playback_volume"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_record_volume" />

                <EditText
                    android:id="@+id/edit_device_record_volume"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_version" />

                <EditText
                    android:id="@+id/edit_device_version"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_have_files" />

                <Button
                    android:id="@+id/show_device_have_files_btn"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="@string/view" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!--底部更换文件、回环测试、设置部分-->
    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dip"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/task_content_group_bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_change_file"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/base_list_item_bg"
                android:text="@string/task_callMOS_change_file"
                android:textColor="@color/app_main_text_color"
                android:textSize="@dimen/app_defult_btn_txt_size" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/task_content_group_bg" />

            <Button
                android:id="@+id/btn_ring_test"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/base_list_item_bg"
                android:text="@string/task_callMOS_ring_test"
                android:textColor="@color/app_main_text_color"
                android:textSize="@dimen/app_defult_btn_txt_size"/>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/task_content_group_bg" />

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/base_list_item_bg"
                android:text="@string/task_callMOS_setting"
                android:textColor="@color/app_main_text_color"
                android:textSize="@dimen/app_defult_btn_txt_size"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>