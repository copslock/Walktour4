<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@color/app_menu_bg_color"
    android:orientation="vertical" >
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radio0"
            style="@style/center_text"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableRight="@drawable/menu_item_check"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/today"
            android:textSize="@dimen/default_txt_size_micro"
            android:textColor="@drawable/selector_tab_text_color3" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <RadioButton
            android:id="@+id/radio1"
            style="@style/center_text"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:text="@string/str_current_week"
            android:drawableRight="@drawable/menu_item_check"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="@dimen/default_txt_size_micro"
            android:textColor="@drawable/selector_tab_text_color3" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <RadioButton
            android:id="@+id/radio2"
            style="@style/center_text"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:text="@string/str_current_month"
            android:drawableRight="@drawable/menu_item_check"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="@dimen/default_txt_size_micro"
            android:textColor="@drawable/selector_tab_text_color3" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@android:drawable/divider_horizontal_bright" />
        <RadioButton
            android:id="@+id/radio3"
            style="@style/center_text"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:text="@string/str_custom"
            android:drawableRight="@drawable/menu_item_check"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="@dimen/default_txt_size_micro"
            android:textColor="@drawable/selector_tab_text_color3" />
    </RadioGroup>
</LinearLayout>