<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:background="@color/setting_bgcolor"
        >
        
        <LinearLayout 
             android:layout_width="fill_parent"
        	 android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <include
            android:id="@+id/about_title"
            layout="@layout/basic_title" />
		<View
		    android:id="@+id/title_blue_color"
		    android:layout_alignBottom="@id/about_title"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/setting_sort_title_bgcolor" />
		
		<TextView 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:textSize="@dimen/app_second_title_txt_size"
		    android:textColor="@color/white"
		    android:padding="5dip"
		    android:text="User Information"
		    />
       
			<LinearLayout
			    android:id="@+id/about_panel_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:background="@drawable/license_run_state_shape"
                 >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="User"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/user_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Test"
                    android:textSize="@dimen/app_content_txt_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
            
            <View android:background="@color/about_item" android:layout_height="1px" android:layout_width="fill_parent" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Check out"
                    android:textSize="@dimen/app_content_txt_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
           <View android:background="@color/about_item" android:layout_height="1px" android:layout_width="fill_parent" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:id="@+id/gls_mag_Contract"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Contract"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/currentjon_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="DL3300AA00001"
                    android:textSize="@dimen/app_content_txt_size"
                    android:drawablePadding="5dip"
                    android:layout_centerVertical="true"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
            <View android:background="@color/about_item" android:layout_height="1px" android:layout_width="fill_parent" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Expiration Date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/user_expiration_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2013/12/12"
                    android:textSize="@dimen/app_content_txt_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
            <View android:background="@color/about_item" android:layout_height="1px" android:layout_width="fill_parent" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Checkout Date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/checkout_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2013/10/12"
                    android:textSize="@dimen/app_content_txt_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
            
             </LinearLayout>
             
			<TextView 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:textSize="@dimen/app_second_title_txt_size"
		    android:textColor="@color/white"
		    android:padding="5dip"
		    android:text="License Check"
		    />
       
			<LinearLayout
			    android:id="@+id/about_panel_item1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:background="@drawable/license_run_state_shape"
                 >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="IMEI"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/imei_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="420762891234541"
                    android:textSize="@dimen/app_content_txt_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
            
            <View android:background="@color/about_item" android:layout_height="1px" android:layout_width="fill_parent" />
            <RelativeLayout
                android:id="@+id/gls_mag_query_contract"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Query Contract"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/query_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="No set"
                    android:textSize="@dimen/app_content_txt_size"
                    android:drawablePadding="5dip"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/gallery_bg_right"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
            <View android:background="@color/about_item" android:layout_height="1px" android:layout_width="fill_parent" />
            <RelativeLayout
                android:id="@+id/check_expiration_date_layout"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:paddingRight="15dip"
                android:paddingLeft="15dip"
                android:background="@drawable/about_item_bg" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Expiration Date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_content_txt_size" />

                <TextView
                    android:id="@+id/check_expiration_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="5dip"
                    android:text="No set"
                    android:textSize="@dimen/app_content_txt_size"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/gallery_bg_right"
                    android:textColor="@color/info_param_color" />
            </RelativeLayout>
             </LinearLayout>
             <RelativeLayout 
                 android:layout_height="wrap_content"
                 android:layout_width="fill_parent"
                 android:paddingTop="10dip"
                 android:paddingLeft="5dip"
                 android:paddingRight="5dip"
                 >

              <Button
				  android:textSize="@dimen/app_second_title_txt_size"
                  android:id="@+id/check_out_btn"
                  android:layout_width="100dip"
                  android:layout_height="38dip"
                  android:background="@drawable/login_button_shape"
                  android:text="Check out"
                  android:textColor="@color/white" />

              <Button
				  android:textSize="@dimen/app_second_title_txt_size"
                  android:id="@+id/check_in_btn"
                  android:layout_width="100dip"
                  android:layout_height="38dip"
                  android:background="@drawable/login_button_shape"
                  android:text="Check in"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/white" />
			</RelativeLayout>
    		</LinearLayout>
<RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_marginBottom="5dip"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ericsson GLS"
            android:textColor="@color/info_param_color"
			android:textSize="@dimen/app_second_title_txt_size" />
    </RelativeLayout>
    
    <LinearLayout 
	    android:id="@+id/progressBar1"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center"
	    android:visibility="gone"
	    android:orientation="vertical"
	    >
	    <ProgressBar
	       style="?android:attr/progressBarStyleLarge"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content" />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Sending request..."
	        android:textColor="@color/white"
	        />
	</LinearLayout>

    </RelativeLayout>

