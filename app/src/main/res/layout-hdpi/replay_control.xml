<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation = "vertical"
  android:background = "@color/gray"
  android:paddingTop = "15dip"
  android:paddingLeft = "5dip"
  android:layout_marginLeft  ="15dip"
  android:layout_marginRight  ="15dip"
  android:layout_marginBottom = "10dip"
  android:layout_gravity = "bottom">
  <TextView android:id = "@+id/textTitle"
    android:text = "@string/data_replay_control"
    android:textSize = "20sp"
  	android:layout_width = "fill_parent"
  	android:layout_height = "wrap_content">
  </TextView>
  <View style = "@style/divideLine"></View>
  <LinearLayout 
  		android:layout_marginTop  = "12dip"
  		android:layout_width = "fill_parent"
	  	android:layout_height = "wrap_content"
	  	android:gravity = "center_vertical">
	  <ImageButton 
	  		android:id = "@+id/imageImport" 
	  		android:layout_width = "wrap_content"
	  		android:layout_height = "wrap_content">
	  	</ImageButton>
	  	<TextView 
	  		android:id = "@+id/textFilePath"
	  		android:text  ="sd"
	  		android:layout_width = "fill_parent"
	  		android:layout_height = "wrap_content"
	  		android:paddingLeft = "30dip">
	  	</TextView>
  </LinearLayout>
  
  <RelativeLayout 
            android:layout_marginTop  = "12dip"
            android:gravity = "center_vertical"
  			android:layout_width = "fill_parent"
	  		android:layout_height = "wrap_content">
	  		<ImageButton
	  		android:id = "@+id/imageControl"
	  		android:layout_width = "wrap_content"
	  		android:layout_height = "wrap_content">
	  		</ImageButton>
	  		<ImageButton
	  		android:id = "@+id/imageStop"
	  		android:layout_toRightOf = "@id/imageControl"
	  		android:layout_width = "wrap_content"
	  		android:layout_height = "wrap_content">
	  		</ImageButton>
  			<ImageButton
	  		android:id = "@+id/imageShowinfo"
	  		android:layout_alignParentRight = "true"
	  		android:layout_width = "wrap_content"
	  		android:layout_height = "wrap_content">
	  		</ImageButton>
  			<SeekBar android:id = "@+id/seekBar"
  			android:layout_toLeftOf = "@id/imageShowinfo"
  			android:layout_toRightOf = "@id/imageStop"
  			android:layout_centerVertical = "true"
  			android:layout_width = "fill_parent"
  			android:layout_height = "wrap_content">
  			</SeekBar>
  </RelativeLayout>
</LinearLayout>
