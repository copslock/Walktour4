<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/Info_LinearLayout01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
 >
	<TabHost android:id="@android:id/tabhost"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
	    	android:layout_width="fill_parent" android:layout_height="fill_parent">
	        <TabWidget android:id="@android:id/tabs" android:layout_width="fill_parent"
	        	android:layout_height="56dip" android:layout_weight="0" />
	        <FrameLayout android:id="@android:id/tabcontent"
	        	android:layout_width="fill_parent" android:layout_height="0dip"
	            android:layout_weight="1"/>
		</LinearLayout>
	</TabHost>
	
	<RelativeLayout 
		android:id="@+id/topBar"
		android:layout_width="fill_parent"
		android:layout_height="56dip"
		android:background="@drawable/gallery_bg"
	>
		<HorizontalScrollView android:id="@+id/HorizontalScrollView"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:paddingLeft="12dip"
			android:paddingRight="12dip"
			android:scrollbars="none"> 
			
			<LinearLayout android:id="@+id/RelaytiveLayout01"
				android:layout_width="fill_parent"  
			    android:layout_height="56dip"
			    android:orientation="horizontal"
			    android:gravity="center_vertical"
			>
				<Button android:id="@+id/Button01"
					android:textColor="@android:color/white"
			    	android:background="@drawable/background_mybutton"
					android:layout_width="52dip"  
			    	android:layout_height="36dip"
			    	android:padding="5dip"
				/>
				<Button android:id="@+id/Button02"
					android:textColor="@android:color/white"
			    	android:background="@drawable/background_mybutton"
					android:layout_width="52dip"  
			    	android:layout_height="36dip"
			    	android:padding="5dip"
				/>
				<Button android:id="@+id/Button03"
					android:textColor="@android:color/white"
			    	android:background="@drawable/background_mybutton"
					android:layout_width="52dip"  
			    	android:layout_height="36dip"
			    	android:padding="5dip"
				/>
				<Button android:id="@+id/Button04"
					android:textColor="@android:color/white"
			    	android:background="@drawable/background_mybutton"
					android:layout_width="52dip"  
			    	android:layout_height="36dip"
			    	android:padding="5dip"
				/>
				<Button android:id="@+id/Button05"
					android:textColor="@android:color/white"
			    	android:background="@drawable/background_mybutton"
					android:layout_width="52dip"  
			    	android:layout_height="36dip"
			    	android:padding="5dip"
				/>
				<Button android:id="@+id/Button06"
					android:textColor="@android:color/white"
			    	android:background="@drawable/background_mybutton"
					android:layout_width="52dip"  
			    	android:layout_height="36dip"
			    	android:padding="5dip"
				/>
				<Button android:id="@+id/Button07"
					android:textColor="@android:color/white"
			    	android:background="@drawable/background_mybutton"
					android:layout_width="52dip"  
			    	android:layout_height="36dip"
			    	android:padding="5dip"
				/>
			</LinearLayout>
		
		</HorizontalScrollView>
		
		<ImageView
			android:id="@+id/ImageView01"
			android:src="@drawable/gallery_bg_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
		/>
		
		
		<ImageView
			android:id="@+id/ImageView02"
			android:src="@drawable/gallery_bg_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
		/>
	
	</RelativeLayout>
	
</RelativeLayout>
