<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@color/app_title_bg_color"
        android:gravity="center_vertical|left" >

        <ImageButton
            android:id="@+id/pointer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/task_test_main_bg"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:src="@drawable/navi_back" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pointer"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/act_info"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/comname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/fontstyle14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/share_project_device_name" />

        <TextView
            android:id="@+id/groupname"
            style="@style/fontstyle14"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:gravity="center|center_vertical"
            android:textColor="@color/single_huise" 
            android:text="珠海测试" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/fontstyle14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/share_project_device_code" />

        <TextView
            android:id="@+id/weifuwuhaoxx"
            style="@style/fontstyle14"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/single_huise" 
            android:gravity="center|center_vertical"
            android:text="160001" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/clearhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/fontstyle14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="@string/share_project_select_historyc_clear" />

        <TextView
            style="@style/fontstyle18"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/single_huise" 
            android:gravity="center|center_vertical"
            android:text=">" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/exitgroup"
            style="@style/fontstyle14"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="bottom"
            android:background="@drawable/dialog_btn"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/share_project_devices_release_relation"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>