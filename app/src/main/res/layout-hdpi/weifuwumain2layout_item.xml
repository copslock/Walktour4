<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/base_list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/objimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="8dp"
        android:background="@drawable/obj_group" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name1"
            style="@style/fontstyle14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="同事A" />

        <TextView
            android:id="@+id/name2"
            style="@style/fontstyle12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="同事A"
            android:textColor="@color/single_huise"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/joinnumbers"
            style="@style/fontstyle14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:gravity="center|center_vertical"
            android:text=""
            android:textColor="@color/single_huise"
            android:visibility="gone" />

        <TextView
            android:id="@+id/joingpointer"
            style="@style/fontstyle14"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:gravity="center|center_vertical"
            android:text=">"
            android:textColor="@color/single_huise" />

        <Button
            android:id="@+id/joingroup"
            style="@style/fontstyle14"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_mybutton4"
            android:gravity="center|center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/share_project_add_group"
            android:textColor="@color/single_huise"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>