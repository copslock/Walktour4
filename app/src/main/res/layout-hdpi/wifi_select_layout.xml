<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wifi_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            style="@style/setting_sort_left_text"
            android:text="请选择一个wifi模式" />

        <com.walktour.framework.ui.BasicSpinner
            android:id="@+id/sp_wifi_type"
            android:layout_alignParentRight="true"
            style="@style/task_drop_view"
            android:layout_marginRight="5dip"
            android:layout_centerInParent="true"
            android:drawSelectorOnTop="true"
            />

    </RelativeLayout>
<com.walktour.customView.ListViewForScrollView
    android:id="@+id/lv_wifi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"></com.walktour.customView.ListViewForScrollView>
</LinearLayout>