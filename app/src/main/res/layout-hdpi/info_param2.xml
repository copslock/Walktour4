<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:background="@color/app_tab_bg_color" >

        <ImageView
            android:id="@+id/top_bar_select"
            android:layout_width="fill_parent"
            android:layout_height="28dip"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/tab_btn_top_2_select_bg_test" >
        </ImageView>

        <ImageView
            android:id="@+id/top_bar_select_2"
            android:layout_width="fill_parent"
            android:layout_height="28dip"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="invisible" >
        </ImageView>

        <ImageView
            android:id="@+id/top_bar_select_3"
            android:layout_width="fill_parent"
            android:layout_height="28dip"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="invisible" >
        </ImageView>

        <ImageView
            android:id="@+id/top_bar_select_4"
            android:layout_width="fill_parent"
            android:layout_height="28dip"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="invisible" >
        </ImageView>

        <ImageView
            android:id="@+id/top_bar_select_5"
            android:layout_width="fill_parent"
            android:layout_height="28dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="invisible" >
        </ImageView>

        <ImageView
            android:id="@+id/top_bar_select_6"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="28dip"
            android:layout_weight="1"
            android:visibility="invisible" >
        </ImageView>

        <ImageView
            android:id="@+id/top_bar_select_7"
            android:layout_width="fill_parent"
            android:layout_height="28dip"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="invisible" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
         android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/tab1_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/tab1"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/background_mybutton"
                android:text="@string/info_gsm"
                android:textSize="@dimen/app_third_title_txt_size"
                android:gravity="center"
                android:textColor="@color/csfb_delay_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab2_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/tab2"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center"
                android:background="@drawable/background_mybutton"
                android:text="@string/info_edge"
                android:textSize="@dimen/app_third_title_txt_size"
                android:textColor="@color/csfb_delay_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab3_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/tab3"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/background_mybutton"
                android:gravity="center"
                android:text="@string/info_tdscdma"
                android:textSize="@dimen/app_third_title_txt_size"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab4_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/tab4"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/background_mybutton"
                android:text="@string/info_umts"
                android:gravity="center"
                android:textSize="@dimen/app_third_title_txt_size"
                android:textColor="@color/csfb_delay_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab5_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/tab5"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/background_mybutton"
                android:text="@string/info_hspa"
                android:gravity="center"
                android:textSize="@dimen/app_third_title_txt_size"
                android:textColor="@color/csfb_delay_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab6_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/tab6"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/background_mybutton"
                android:text="@string/info_hspa_plus"
                android:textSize="@dimen/app_third_title_txt_size"
                android:gravity="center"
                android:textColor="@color/csfb_delay_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab7_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/tab7"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/background_mybutton"
                android:text="@string/info_wlan"
                android:textSize="@dimen/app_third_title_txt_size"
                android:gravity="center"
                android:textColor="@color/csfb_delay_color" />
        </LinearLayout>
    </LinearLayout>

    
        <TabHost
        android:id="@+id/child_tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearlayout"  >


            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/gallery_bg"
                android:divider="@null"
                android:padding="0dp"
                android:visibility="gone"
                android:textColor="@color/white" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/black" >
            </FrameLayout>
    </TabHost>
    
