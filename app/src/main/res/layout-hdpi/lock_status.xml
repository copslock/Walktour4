<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@drawable/layout_white_circle"
    android:orientation="horizontal"

    android:weightSum="5" >

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginLeft="10dip"
        android:orientation="vertical"
         >

        <TextView
            android:id="@+id/TextViewStatus"
            style="@style/lock_net_type"
            android:text="LTE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/TextViewPara1"
                style="@style/lock_para_name"
                android:text="RSCP(dBm)" />

            <TextView
                android:id="@+id/TextViewValue1"
                style="@style/lock_para_value"
                android:text="-56" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/TextViewPara2"
                style="@style/lock_para_name"
                android:text="MCC/MNC" />

            <TextView
                android:id="@+id/TextViewValue2"
                style="@style/lock_para_value"
                android:text="460/1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" 
        android:layout_marginRight="10dip"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/TextViewPara3"
                style="@style/lock_para_name"
                android:text="@string/lte_band" />
            <TextView
                android:id="@+id/TextViewValue3"
                style="@style/lock_para_value"
                android:text="41" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/TextViewPara4"
                style="@style/lock_para_name"
                android:text="@string/lte_workmode" />
            <TextView
                android:id="@+id/TextViewValue4"
                style="@style/lock_para_value"
                android:text="188" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/TextViewPara5"
                style="@style/lock_para_name"
                android:text="UARFCN" />
            <TextView
                android:id="@+id/TextViewValue5"
                style="@style/lock_para_value"
                android:text="10668" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/TextViewPara6"
                style="@style/lock_para_name"
                android:text="CPI" />
            <TextView
                android:id="@+id/TextViewValue6"
                style="@style/lock_para_value"
                android:text="131" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>