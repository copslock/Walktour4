<?xml version="1.0" encoding="utf-8"?>

<!-- listview_item_style３ -->
<!-- 左边图标ImageView，２个 TextView上下分布 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="4dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip" >

    <ImageView
        android:id="@+id/ItemImage"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/ItemCheckble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:button="@drawable/checkbox" />

    <TextView
        android:id="@+id/ItemTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ItemCheckble"
        android:paddingTop="5dip"
        android:text="ItemTitle"
        android:textColor="@color/app_main_text_color"
        android:textSize="@dimen/app_content_txt_size" />

    <TextView
        android:textSize="@dimen/app_content_txt_size"
        android:id="@+id/ItemText"
        android:layout_width="117dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ItemTitle"
        android:layout_below="@+id/ItemTitle"
        android:paddingRight="42dip"
        android:text="ItemText"
        android:textColor="@color/app_main_second_title_text_color" />

    <TextView
        android:textSize="@dimen/app_content_txt_size"
        android:id="@+id/ItemAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ItemText"
        android:layout_toRightOf="@id/ItemText"
        android:text="HHHHHH"
        android:textColor="@color/app_main_second_title_text_color" />

</RelativeLayout>