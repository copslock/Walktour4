<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="42dip"
    android:gravity="center_vertical"
    android:background="@color/app_main_bg_color" >

    <RelativeLayout 
        android:layout_width="fill_parent"
         android:layout_height="40dip"
         android:gravity="center_vertical"
         android:id="@+id/advanced_arrow_rel"
        >
    <TextView
        android:id="@+id/task_sort_title_txt"
        android:layout_marginLeft="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/act_sys_advanced"
        android:layout_centerVertical="true"
        android:textColor="@color/app_main_text_color" />
    
    <ImageView
        android:id="@+id/advanced_arrow"
        android:background="@drawable/expander_ic_minimized_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        />
    </RelativeLayout>
     <View style="@style/task_listdivider"  android:layout_alignParentTop="true"/>
      <View style="@style/task_listdivider"  android:layout_alignParentBottom="true"/>

</RelativeLayout>