<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_weight="50" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:background="@color/app_main_bg_color"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/main_deviceName" />

                <EditText
                    android:id="@+id/edit_device_name"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_mac_address" />

                <EditText
                    android:id="@+id/edit_mac_address"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_signal_level" />

                <EditText
                    android:id="@+id/edit_signal_level"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_ring_result" />

                <EditText
                    android:id="@+id/edit_ring_result"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--/--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_power" />

                <EditText
                    android:id="@+id/edit_device_power"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_playback_volume" />

                <EditText
                    android:id="@+id/edit_device_playback_volume"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_record_volume" />

                <EditText
                    android:id="@+id/edit_device_record_volume"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_version" />

                <EditText
                    android:id="@+id/edit_device_version"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="--" />
            </RelativeLayout>

            <View style="@style/task_listdivider" />

            <RelativeLayout
                style="@style/task_layout_edge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/tasK_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/task_callMOS_device_have_files" />

                <Button
                    android:id="@+id/show_device_have_files_btn"
                    style="@style/task_edit_view"
                    android:layout_centerInParent="true"
                    android:enabled="false"
                    android:text="@string/view" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>