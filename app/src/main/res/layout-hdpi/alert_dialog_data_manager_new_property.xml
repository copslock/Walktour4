<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/btn_scan" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/file_name" />

                        <TextView
                            android:id="@+id/txt_file_path"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="Android-OUT20150722-Email" />
                        
                    </RelativeLayout>
                    <View style="@style/task_listdivider" />
                    <!-- TCP/IP 如果没有就隐藏 -->

                    <RelativeLayout
                        android:id="@+id/layout_tcp_ip"
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/info_tcpip" />

                        <TextView
                            android:id="@+id/txt_file_size_1"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="35.54M" />
                    </RelativeLayout>

                    <!-- ========================================= -->

                    <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/str_upload_state" />

                        <TextView
                            android:id="@+id/txt_file_size_2"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="35.54M" />
                    </RelativeLayout>

                                        <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/str_test_scene" />

                        <TextView
                            android:id="@+id/txt_file_size_3"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="35.54M" />
                    </RelativeLayout>
                    <!-- 运营商 -->
                                        <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/str_network_type" />

                        <TextView
                            android:id="@+id/txt_file_size_4"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="35.54M" />
                    </RelativeLayout>
                                        <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/str_test_start_time" />

                        <TextView
                            android:id="@+id/txt_file_size_5"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="35.54M" />
                    </RelativeLayout>
                                        <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/str_test_time_long" />

                        <TextView
                            android:id="@+id/txt_file_size_6"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="35.54M" />
                    </RelativeLayout>
                    <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/str_test_business" />

                        <TextView
                            android:id="@+id/txt_file_size_7"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="35.54M" />
                    </RelativeLayout>
                    <!-- 建筑物 楼层 -->
                    <LinearLayout
                        android:id="@+id/layout_info_building_floor" 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <!-- 建筑物 -->
                    <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/main_building" />

                        <TextView
                            android:id="@+id/txt_8"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="" />
                    </RelativeLayout>
                    <!-- 楼层 -->
                    <RelativeLayout
                        style="@style/task_layout_edge"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp" >

                        <TextView
                            style="@style/setting_sort_left_text_2"
                            android:layout_marginLeft="0dp"
                            android:text="@string/main_floor" />

                        <TextView
                            android:id="@+id/txt_9"
                            style="@style/setting_sort_right_text_2"
                            android:layout_marginRight="0dp"
                            android:maxWidth="200dp"
                            android:text="" />
                    </RelativeLayout>
                    </LinearLayout>
                    
                    <View style="@style/task_listdivider" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/box2"
            android:text="@string/str_see_test_plan"
            android:textColor="@color/app_main_text_color"
            android:textSize="@dimen/default_txt_size_normal" />
    </RelativeLayout>

</LinearLayout>