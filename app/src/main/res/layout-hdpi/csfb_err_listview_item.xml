<?xml version="1.0" encoding="utf-8"?>  
<!-- 左边图标，右边标题 -->

<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"   
    android:id="@+id/RelativeLayout01"   
    android:layout_width="fill_parent"   
    android:layout_height="wrap_content"
    android:minHeight="35dip"   
    android:paddingLeft="12dip" 
    android:gravity="center_vertical"
    android:background="@drawable/base_list_item_bg" 
    android:weightSum="5"
    android:paddingRight="12dip">  
    
 <TextView  android:id="@+id/ItemTime"  
    android:text="12:15:06"  
    android:layout_height="wrap_content"   
    android:layout_width="fill_parent" 
    android:singleLine="true"
    android:textSize="@dimen/app_content_txt_size"
    android:layout_weight="1.9"
    android:textColor="@color/app_main_text_color" 
/> 
     
<TextView  android:id="@+id/taskType"  
    android:text="主叫"  
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:singleLine="true"
    android:textSize="@dimen/app_content_txt_size"
    android:layout_weight="2"
    android:gravity="center"
    android:textColor="@color/app_main_text_color" 
/> 


<TextView  android:id="@+id/errDetail"  
    android:text="非CSFB呼叫"  
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
	android:layout_weight="1.1"
    android:textSize="@dimen/app_content_txt_size"
    android:gravity="right"
    android:singleLine="true"
    android:textColor="@color/app_main_text_color" 
/> 

    
</LinearLayout>  