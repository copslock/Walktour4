<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.walktour.framework.ui.BasicActivity" >

    <!-- start title -->

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#0071BC"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/navi_back"
            android:contentDescription="@string/name" />

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pointer"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/sys_map_parameter_go_or_nogo_setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_first_title_txt_size" />
    </RelativeLayout>
    <!-- end title -->

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="#F6F6F6"
        android:divider="@null"
        android:dividerHeight="0.5dp"
        android:cacheColorHint="#00000000"
        android:clickable="false"
        android:focusable="false"
        />

</LinearLayout>