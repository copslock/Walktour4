<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main_bg_color"
    android:orientation="vertical"
    tools:context="com.walktour.framework.ui.BasicActivity" 
    android:id="@+id/sys_map_param_threshold_view">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#F7F7F7"
        android:orientation="horizontal" 
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical">
            <ImageView 
                android:id="@+id/add_threshold"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingLeft="5dp"
                android:src="@drawable/add"
                />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                 >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/selector_shape_button_threshold_left"
                    android:textColor="@drawable/selector_tab_text_color_2"
                    android:text="@string/less_equal_string"/>

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_shape_button_threshold_right"
                    android:textColor="@drawable/selector_tab_text_color_2"
                    android:text="@string/more_equal_string" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" 
            android:gravity="center">

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:orientation="horizontal" 
                >

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/selector_shape_button_threshold_left"
                    android:textSize="15sp"
                    android:textColor="@drawable/selector_tab_text_color_2"
                    android:text="@string/up_order" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_shape_button_threshold_right"
                    android:textSize="15sp" 
                    android:textColor="@drawable/selector_tab_text_color_2"
                    android:text="@string/down_order" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/threshold_layout" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	</LinearLayout>
</LinearLayout>