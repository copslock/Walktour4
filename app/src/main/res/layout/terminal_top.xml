<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_terminal_sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="240sp"
        android:textColor="#41000000"/>


	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentBottom="true"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:padding="10dip" >
	
	    <TextView android:id="@+id/text_blank0"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:textColor="@color/app_main_text_color"
	        android:layout_weight="1"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/text_network"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:textColor="@color/app_main_text_color"
	        android:layout_weight="1"
	        android:gravity="center" />
	
	    <TextView
	        android:id="@+id/text_network_type"
	        android:layout_width="match_parent"
	        android:textColor="@color/app_main_text_color"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:gravity="center" />
	    
	    <TextView
	        android:id="@+id/text_imei"
	        android:layout_width="match_parent"
	        android:textColor="@color/app_main_text_color"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:gravity="center" />
	    
	    <ImageView
	        android:id="@+id/iv_terminal_connectstate"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:src="@drawable/state_disconect" />
	
	    <TextView
	        android:id="@+id/text_connectstate_info"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:textColor="@color/app_main_text_color"
	        android:text="@string/mutilytester_state_default" />
	    
	    <TextView android:id="@+id/text_blank1"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:textColor="@color/app_main_text_color"
	        android:gravity="center"/>
	
	</LinearLayout>

</RelativeLayout>