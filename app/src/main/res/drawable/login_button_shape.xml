<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
		<shape>
	    <gradient android:angle="90" android:endColor="#28aae2" android:startColor="#1fa3db" />

	    <stroke android:width="1dip" android:color="#838F9197" />

	    <corners android:bottomLeftRadius="5dip" android:bottomRightRadius="5dip" android:topLeftRadius="5dip" android:topRightRadius="5dip" />

	    </shape>
    </item>
    
    
    
    
